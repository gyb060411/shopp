<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <CheckBox
       style="@style/Widget.AppCompat.CompoundButton.RadioButton"
       android:layout_marginLeft="5dp"
       app:layout_constraintRight_toLeftOf="@id/image_recycelr"
       app:layout_constraintTop_toTopOf="@id/image_recycelr"
       app:layout_constraintBottom_toBottomOf="@id/image_recycelr"
       android:id="@+id/ck_recycler_select"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       tools:ignore="MissingConstraints" />
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/ck_recycler_select"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/image_recycelr"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:text="asd"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_recycelr"
        android:id="@+id/cart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="asd"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/cart_name"
        app:layout_constraintLeft_toRightOf="@id/image_recycelr"
        android:id="@+id/cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="x10"
        android:layout_marginTop="25dp"
        android:id="@+id/cart_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:text="@string/tv_select"
        android:id="@+id/tv_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_minus"
        android:paddingLeft="10dp"
        android:text="â€”"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@id/tv_select"
        app:layout_constraintTop_toTopOf="@id/tv_select"
        android:layout_marginTop="20dp"
        android:background="@drawable/shpae"
        android:layout_width="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:background="@drawable/shpae"
        app:layout_constraintLeft_toRightOf="@id/tv_minus"
        app:layout_constraintTop_toBottomOf="@id/tv_select"
        android:text="0"
        android:id="@+id/tv_number"
        android:layout_width="50dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/plus"
        android:visibility="gone"
        android:text="+"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_number"
        app:layout_constraintTop_toBottomOf="@id/tv_select"
        android:background="@drawable/shpae"
        android:layout_width="30dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>