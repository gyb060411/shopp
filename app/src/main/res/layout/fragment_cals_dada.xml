<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CalsDadaFragment">
    <ImageView
        android:id="@+id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="@id/image"
        app:layout_constraintRight_toRightOf="@id/image"
        android:textSize="16dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="#DEDADA"
        app:layout_constraintRight_toLeftOf="@id/tv_heat_name"
        app:layout_constraintTop_toTopOf="@id/tv_heat_name"
        android:layout_marginRight="5dp"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_heat_name"
        android:layout_height="1dp"/>
    <View
        android:background="#DEDADA"
        app:layout_constraintBottom_toBottomOf="@id/tv_heat_name"
        app:layout_constraintLeft_toRightOf="@id/tv_heat_name"
        app:layout_constraintTop_toTopOf="@id/tv_heat_name"
        android:layout_marginRight="5dp"
        android:layout_width="50dp"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:id="@+id/tv_heat_name"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyler"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_heat_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>